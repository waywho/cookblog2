<div class="row">

  <div class="medium-12 large-12 columns">
    <h1>Deals</h1>
    <p class="subheader">If you are looking for a deal when buying groceries or kitchen ware, here is the section. Find yourself to any voucher codes or deals here.</p>
  </div>
 </div>

 <div class="row column">
  <hr>
</div>

<div class="row">
  	<div class="large-8 columns" style="border-right: 1px solid #E3E5E8;">
		<div class="row">
			<div class="small-up-1 medium-up-2 large-up-3 columns">
				<% @offers.each do |offer| %>
					<%= link_to offer.link.html_safe do %>
					    <div class="callout" id="offer-callout">
					    	<h4><%= offer.title %></h4>
					    	<%= offer.content.html_safe %>
					    	<b>Expires:</b><%= offer.expiration_date.strftime("%d/%m/%Y") %>
					    </div>
				    <% end %>
				    <%= button_to 'Get the Deal', offer.link.html_safe, class:"success button" %> 
			    <% end %>
			 </div>
		</div>
	</div>
	<div class="large-4 columns">
		<div class="row column">
	    	<p class="lead">FROM OUR FRIENDS</p>
	    	<%= render :partial => 'layouts/side_column_ads' %>      
	    </div>
	</div>
</div>

