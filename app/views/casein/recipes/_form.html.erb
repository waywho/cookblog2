<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_field f, f.object, :title %>
	</div>
</div>
<div class="row">

	<% if @recipe.photo.present? %>
			<div class="col-md-4">
				<h5>Feature Photo</h5>
				<%= image_tag @recipe.photo.image_url %>
			</div>
	<% else %>
	<div class="col-lg-12 col-md-12">
		<%= f.fields_for :photo, @recipe.build_photo do |builder| %>
			<%= render 'casein/photos/photo_fields', f: builder %>
		<% end %>
	</div>
	<% end %>
</div>

<div class="row">
	<%= f.simple_fields_for :ingredient_forms do |builder| %>
		<%= render 'casein/recipes/ingredient_form_fields', f: builder %>
	<% end %>
	<%= link_to_add_new_fields "Add ingredient", f, :ingredient_forms %>
</div>
<div class="row">
	<div class="col-lg-6 col-md-6">
		<%= casein_text_field f, f.object, :keyword_list, casein_label: "Keywords (separated by commas)", value: f.object.keyword_list.to_s, id: 'keywords', data: {autocomplete_source: ActsAsTaggableOn::Tag.all.map(&:name)} %>
	</div>
</div>

<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_area f, f.object, :content, class: "description-box-large wysihtml5" %>
	</div>
</div>

