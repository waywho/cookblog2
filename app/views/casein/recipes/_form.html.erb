<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_field f, f.object, :title %>
	</div>
</div>
<div class="row">

	<div class="col-lg-12 col-md-12">
		<b>Image</b>
		<%= f.fields_for :photo do |builder| %>
			<% if builder.object.new_record? %>
				<div class='well'>
					<%= builder.file_field :image %>
				</div>
			<% else %>
				<%= image_tag builder.object.image.url %>
				<%= builder.check_box :_destroy %>
			<% end %>	
		<% end %>
	</div>
</div>

<br />
<b>Ingredients</b>
<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>Amount</th>
			<th>Unit</th>
			<th>Ingreident</th>
			<th>Form</th>
			<th>&nbsp;</th>
		</tr>
	</thead>

		<%= f.simple_fields_for :ingredient_forms do |builder| %>
				<%= render 'casein/recipes/ingredient_form_fields', f: builder %>
		<% end %>
			<tr>
				<td><%= link_to_add_new_fields "Add ingredient", f, :ingredient_forms %></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
			</tr>
</table>




<div class="row">
	<div class="col-lg-6 col-md-12">
		<%= casein_select f, f.object, :category, Recipe::CATEGORIES, include_blank: true %>
	</div>
	<div class="col-lg-6 col-md-12">
		<%= casein_text_field f, f.object, :keyword_list, casein_label: "Keywords (separated by commas)", value: f.object.keyword_list.to_s, id: 'keywords', data: {autocomplete_source: ActsAsTaggableOn::Tag.all.map(&:name)} %>
	</div>
</div>

<div class="row">
	<div class="col-lg-12 col-md-12">
		<%= casein_text_area f, f.object, :content, class: "description-box-large wysihtml5" %>
	</div>
</div>

