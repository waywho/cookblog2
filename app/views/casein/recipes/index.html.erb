<h2>Recipes<%= casein_pagination_details @recipes %></h2>
<%= form_tag edit_multiple_casein_recipes_path, method: :post do %>
	<%= render :partial => 'casein/recipes/table', :locals => { :recipes => @recipes } %>
	<%= render :partial => 'casein/layouts/multi_btns' %>
<% end %>

<div class="text-center">
	<%= will_paginate @recipes %>
</div>

<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new recipe".html_safe, new_casein_recipe_path %></li>
	Download Data: <%= link_to 'CSV', casein_recipes_path(format: 'csv') %> | 
		<%= link_to 'Excel', casein_recipes_path(format: 'xlsx') %>
	<br />
	<br />
	Import Data with CSV file:
	<br />
		<%= form_tag import_casein_recipes_path, multipart: true do %>
			<%= file_field_tag :file, accept: 'text/csv' %>
			<%= submit_tag "Import", :class => 'btn btn-xs btn-primary pull-right' %>
		<% end %>


<% end %>
