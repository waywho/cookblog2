<div class='row'>
<h2 class='inline-header'>Recipes<%= casein_pagination_details @recipes %></h2>	

<li class='pull-right'><%= link_to "#{casein_show_icon "plus-sign"}Add a new recipe".html_safe, new_casein_recipe_path %></li>
</div>
<%= form_tag edit_multiple_casein_recipes_path, method: :post do %>
	<%= render :partial => 'casein/recipes/table', :locals => { :recipes => @recipes } %>
	<%= render :partial => 'casein/layouts/multi_btns' %>
<% end %>

<div class="text-center">
	<%= will_paginate @recipes %>
</div>
<br />
<div class='row col-sm-4'>
		Download: <%= link_to 'CSV', casein_recipes_path(format: 'csv') %> | 
			<%= link_to 'Excel', casein_recipes_path(format: 'xlsx') %>
		<br />
		Import Data:<br />
			<%= form_tag import_casein_recipes_path, :class => 'form-inline', multipart: true do %>
				<%= file_field_tag :file, accept: 'text/csv' %>
				<%= submit_tag "Import", :class => 'btn btn-xs btn-primary' %>
			<% end %>

</div>
