<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Content", :content %></th>
			<th><%= casein_sort_link "Keywords", :keywords %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% recipes.each do |recipe| %>
		<tr>
			<td><%= check_box_tag 'recipe[recipe_ids][]', recipe.id, checked = false, { id: dom_id(recipe), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link recipe.title, casein_recipe_path(recipe) %></td>
			<td><%= casein_table_cell_link recipe.content, casein_recipe_path(recipe) %></td>
			<td><%= casein_table_cell_link recipe.keywords, casein_recipe_path(recipe) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_recipe_path(recipe), :method => :delete, :data => { :confirm => "Are you sure you want to delete this recipe?" }) %>
			</td>
		</tr>
	<% end %>
</table>
