<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Content", :content %></th>
			<th><%= casein_sort_link "Expiration date", :expiration_date %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% offers.each do |offer| %>
		<tr>
			<td><%= check_box_tag 'offer[offer_ids][]', offer.id, checked = false, { id: dom_id(offer), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link offer.title, casein_offer_path(offer) %></td>
			<td><%= casein_table_cell_link offer.content, casein_offer_path(offer) %></td>
			<td><%= casein_table_cell_link offer.expiration_date, casein_offer_path(offer) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_offer_path(offer), :method => :delete, :data => { :confirm => "Are you sure you want to delete this offer?" }) %>
			</td>
		</tr>
	<% end %>
</table>
