
<%= f.submit "Save as draft", name: 'draft', :class => "btn btn-mini btn-info draft" %>
<%= f.submit "Submit for approval", name: 'submit', :class => 'btn btn-mini btn-success submit' %>
<%= f.submit "Approve", name: 'approve', :class => 'btn btn-mini btn-success approve' %>
<%= f.submit "Reject", name: 'reject', :class => 'btn btn-mini btn-danger reject' %>
<% if current_user.is_admin? %>
	<%= f.submit "Unpublish", name: 'unpublish', :class => 'btn btn-mini btn-danger unpublish' %>
	<%= f.submit "Publish", name: 'publish', :class => 'btn btn-mini btn-primary publish' %>
<% end %>
<%= f.submit "Update", name: 'update', :class => 'btn btn-mini btn-primary update' %>