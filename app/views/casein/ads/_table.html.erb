<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Content", :content %></th>
			<th><%= casein_sort_link "Position", :position %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% ads.each do |ad| %>
		<tr>
			<td><%= check_box_tag 'ad[ad_ids][]', ad.id, checked = false, { id: dom_id(ad), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link ad.content, casein_ad_path(ad) %></td>
			<td><%= casein_table_cell_link ad.position, casein_ad_path(ad) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_ad_path(ad), :method => :delete, :data => { :confirm => "Are you sure you want to delete this ad?" }) %>
			</td>
		</tr>
	<% end %>
</table>
