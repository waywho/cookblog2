<!-- Scaffolding generated by Casein v5.1.1.5 -->
<h2>Ads</h2>

<%= form_tag update_multiple_casein_ads_path, defaults: { input_html: { :class => 'multiple-edit' } } do %>	

	<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Content", :content %></th>
			<th><%= casein_sort_link "Position", :position %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @ads.each do |ad| %>
		<%= simple_fields_for 'ads[]', ad do |f| %>
		<tr>
			
			<td><%= f.input :content, label: false %></td>
			
			<td><%= f.input :position, label: false %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_ad_path(ad), :method => :delete, :data => { :confirm => "Are you sure you want to delete this ad?" }) %>
			</td>
		</tr>
		<% end %>
	<% end %>
	</table>

	<p class="submits">
	<%= link_to 'Cancel', casein_ads_path, :class => 'btn btn-mini btn-default' %>
	<%= submit_tag "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>
<% end %>	


<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new ad".html_safe, new_casein_ad_path %></li>

<% end %>
