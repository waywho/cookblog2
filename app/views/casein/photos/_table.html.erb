<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Caption", :caption %></th>
			<th><%= casein_sort_link "Recipe", :recipe %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% photos.each do |photo| %>
		<tr>
			<td><%= check_box_tag 'photos[photos_ids][]', photo.id, checked = false, { id: dom_id(photo), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link photo.caption, casein_photo_path(photo) %></td>
			<td><%= casein_table_cell_link photo.recipe.title, casein_photo_path(photo) if photo.recipe.present? %></td>
			<td><%= casein_table_cell_link photo.image, casein_photo_path(photo) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_photo_path(photo), :method => :delete, :data => { :confirm => "Are you sure you want to delete this photos?" }) %>
			</td>
		</tr>
	<% end %>
</table>
