<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= check_box_tag 'multi' %></th>
			<th><%= casein_sort_link "Caption", :caption %></th>
			<th><%= casein_sort_link "Imageable", :imageable_id %></th>
			<th><%= casein_sort_link "Imageable type", :imageable_type %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% photos.each do |photos| %>
		<tr>
			<td><%= check_box_tag 'photos[photos_ids][]', photos.id, checked = false, { id: dom_id(photos), :class => 'index-check' } %>
				</td>
			<td><%= casein_table_cell_link photos.caption, casein_photos_path(photos) %></td>
			<td><%= casein_table_cell_link photos.imageable_id, casein_photos_path(photos) %></td>
			<td><%= casein_table_cell_link photos.imageable_type, casein_photos_path(photos) %></td>
			<td><%= casein_table_cell_link photos.image, casein_photos_path(photos) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_photos_path(photos), :method => :delete, :data => { :confirm => "Are you sure you want to delete this photos?" }) %>
			</td>
		</tr>
	<% end %>
</table>
