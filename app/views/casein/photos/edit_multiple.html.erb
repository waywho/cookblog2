<!-- Scaffolding generated by Casein v5.1.1.5 -->
<h2>Photos</h2>

<%= form_tag update_multiple_casein_photos_path, defaults: { input_html: { :class => 'multiple-edit' } } do %>	

	<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Caption", :caption %></th>
			<th><%= casein_sort_link "Imageable", :imageable_id %></th>
			<th><%= casein_sort_link "Imageable type", :imageable_type %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% @photos.each do |photos| %>
		<%= simple_fields_for 'photos[]', photos do |f| %>
		<tr>
			
			<td><%= f.input :caption, label: false %></td>
			
			<td><%= f.input :imageable_id, label: false %></td>
			
			<td><%= f.input :imageable_type, label: false %></td>
			
			<td><%= f.input :image, label: false %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_photos_path(photos), :method => :delete, :data => { :confirm => "Are you sure you want to delete this photos?" }) %>
			</td>
		</tr>
		<% end %>
	<% end %>
	</table>

	<p class="submits">
	<%= link_to 'Cancel', casein_photos_path, :class => 'btn btn-mini btn-default' %>
	<%= submit_tag "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>
<% end %>	


<%= content_for :sidebar do %>

	<li><%= link_to "#{casein_show_icon "plus-sign"}Add a new photos".html_safe, new_casein_photo_path %></li>

<% end %>
